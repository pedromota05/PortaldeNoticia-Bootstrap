<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		<title>Portal de notícias Agetran</title>

		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>
	<body>
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<img class="img-logo" src="images/agetran.png" />
				</div>
				<div class="container text-right">
					<a href="home" class="btn btn-default">HOME</a>
				</div>
			</div>
		</nav>

	    <div class="container">
	    	<div class="row">
	    		<form action="/busca" method="post">
	    			<div class="form-group">
	    				<label class="text"> Buscar notícias: </label>
	    				<input type="text" class="form-control" name="pesquisa">
	    				<input type="submit" class="btn btn-default" value="Enviar">
	    			</div>
	    		    <label class="text text-muted"> <%=noticias.length %> notícias localizadas </label>
	    		</form>
	    	</div>
	      		<% if (noticias.length > 0) { %>
	      			<% for(var i=0; i<noticias.length; i++) { %>
	    	<div class="row">
	    		<div class="col-md-12">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%= noticias[i].autor %></span>
		    			<a href="noticia?id_noticia=<%= noticias[i].id_noticia %>" class="noticia_titulo"><%=noticias[i].titulo %> </a>
		    			<span class="noticia_data"><%= noticias[i].data_noticia%></span>
		    			<br />
		    			<p class="noticia_resumo"><%=noticias[i].resumo%></p>
		    			<div class='text-center'>
                            <img alt="User Pic" src="http://localhost:3000/images/upload_images/<%=noticias[i].imagem%>" class="img-fluid img-thumbnail"> 
                        </div>
		    		</div>
		    	</div>
			</div>
					<% } %>
		  		<% } %>
	    </div>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	</body>
</html>